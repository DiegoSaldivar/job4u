{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="py-5 text-center" style="background-image: url('/img/bg_job4u.jpg');background-size:cover;">
    <div class="container">
            <div class="row">
            	<div class="mx-auto col-md-6 col-10 bg-white p-5" style="">
                   	<h1 class="mb-4">Log in</h1>
                    <form method="post" class="validateLogin needs-validation" novalidate>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-row">
                            <label for="inputEmail" class="required">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" placeholder="E-mail" required>
                                <div class="valid-feedback">E-mail format is ok!</div>
                                <div class="invalid-feedback">The e-mail is not correct!</div>
                        </div>
                        
                        <div class="form-row">
                            <label for="inputPassword" class="required">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control mb-3" placeholder="Password" required>
                            	<div class="valid-feedback">Everything is fine!</div>
                                <div class="invalid-feedback">The password length should be at least 5 characters!</div>
                        
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                    	</div>
                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html
                    
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}
                    
                        <button class="btn btn-lg btn-secondary btn-block mb-3" type="submit">Sign in</button>
                        <p class="form-text text-muted text-center">
                        	<a href="{{ path('register') }}" class="text-secondary px-2">Not a registered user? Sign Up!</a>
                        </p> 
                </form>
            </div>
        </div>
      </div>
</div>
{% block javascripts %}
{{ parent() }}
<!-- Custom script for validation of Log In page-->
		    <script src="/js/validateLogin.js"></script>
{% endblock %}

{% endblock %}
