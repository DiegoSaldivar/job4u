     {{ form_row(userForm.password, {'attr': {'placeholder': 'Enter your password'}}) }}
     {{ form_row(userForm.submit, {'label': 'Register'}) }}
     
     {{ form_end(userForm) }}

          <a href="{{ path('login') }}" class="text-secondary px-2">Already registered? Log In!</a>
        </div>
      </div>
    </div>
  </div>
