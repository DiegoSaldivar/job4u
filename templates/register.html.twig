{% extends 'base.html.twig' %}

{% block body %}

	<div class="py-5 text-center" style="background-image: url('/img/bg_job4u.jpg');background-size:cover;">
    <div class="container">
      <div class="row">
        <div class="mx-auto bg-white p-5 col-md-6 col-10">
          <h1 class="mb-4">Sign Up</h1>

{#           {{ form(userForm) }}#}
	 {{ form_start(userForm) }}
	 
     {{ form_row(userForm.fullname, {'attr': {'placeholder': 'Enter Full Name'}}) }}
     {{ form_row(userForm.username, {'attr': {'placeholder': 'Username'}}) }}
