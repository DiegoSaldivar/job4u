{% extends 'admin-base.html.twig' %}

{% block title %}Job4u Admin Userlist{% endblock %}

{% block breadcrumb %}
	<!-- Breadcrumbs-->
       <ol class="breadcrumb">
         <li class="breadcrumb-item">
           <a href="/admin">Dashboard</a>
         </li>
         <li class="breadcrumb-item">roles</li>
         <li class="breadcrumb-item active">list</li>
       </ol>
{% endblock %}

{% block body %}
<!-- DataTables Example -->
<div class="card mb-3">
	<div class="card-header">
    	<i class="fas fa-table"></i>Role Data Table
	</div>
    <div class="card-body">
      <div class="table-responsive">
	        <table class="table table-bordered" id="dataTable">
	          <thead>
	            <tr>
	              <th>Label</th>
	              <th>Modify</th>
	              <th>Delete</th>
	            </tr>
	          </thead>
	          <tbody>
	            {% for role in roleList %}
	            <tr>
	              <td>{{ role.getLabel() }}</td>
	              <td><a href="/admin/role/modify/{{ role.getId() }}" class="btn btn-info"><i class="fas fa-address-book"></i></a></td>
	              <td><a href="/admin/role/delete/{{ role.getId() }}" class="btn btn-danger"><i class="fas fa-user-times"></i></a></td>
	            </tr>
	            {% endfor %}
	          </tbody>
			</table>
		</div>
	</div>
	<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
{% endblock %}